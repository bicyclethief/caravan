<% if flash[:error] %>
<h3 style="color: red;"><%= flash[:error] %></h3>
<% end %>
<div class="container">
  <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
      <div class="stepwizard-step">
        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
      </div>
      <div class="stepwizard-step">
        <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
      </div>
      <div class="stepwizard-step">
        <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
      </div>
    </div>
  </div>
  <%= form_tag @url, method: @method do %>
  <div class="row setup-content" id="step-1">
    <div class="col-xs-12">
      <div class="col-md-12">
        <h3> Step 1: Origin <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button></h3>
        <div class="form-group">
          <%# label_tag 'Origin Street Address' %>
          <%= text_field_tag 'origin_address[street_address]', @origin_address ? @origin_address.street_address : "", placeholder: "Street Address" %>
        </div>
        <div class="form-group">
         <%# label_tag 'Origin Secondary Address' %>
         <%= text_field_tag 'origin_address[secondary_address]', @origin_address ? @origin_address.secondary_address : "", placeholder: "", placeholder: "Secondary Address" %>
       </div>
       <div class="form-group">
        <%# label_tag 'Location Description' %>
        <%= text_field_tag 'address[description]', @origin_address ? @origin_address.description : "", placeholder: "Description" %>
      </div>
      <div class="form-group">
        <%# label_tag 'Origin City' %>
        <%= text_field_tag 'origin_address[city]', @origin_address ? @origin_address.city : "", placeholder: "City" %>
      </div>
      <div class="form-group">
        <%# label_tag 'Origin State' %>
        <%= text_field_tag 'origin_address[state]', @origin_address ? @origin_address.state : "", placeholder: "State" %>
      </div>
      <div class="form-group">
       <%# label_tag "Zip Code" %>
       <%= text_field_tag "origin_address[zip_code]", @origin_address ? @origin_address.zip_code : "", placeholder: "Zip Code" %>
       <%= hidden_field_tag 'origin_address[user_id]', current_user.id %>
     </div>
   </div>
 </div>         

</div>
<div class="row setup-content" id="step-2">

  <div class="col-xs-12">
    <div class="col-md-12">
      <h3> Step 2: Destination <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button></h3>
      <div class="form-group">
        <%= hidden_field_tag 'destination_address[user_id]', current_user.id %> <br>
        <%# label_tag 'Destination Street Address' %>
        <%= text_field_tag 'destination_address[street_address]', @destination_address ? @destination_address.street_address : "", placeholder: "Zip Code" %>
      </div>
      <div class="form-group">
       <%# label_tag 'Destination Secondary Address' %>
       <%= text_field_tag 'destination_address[secondary_address]', @destination_address ? @destination_address.secondary_address : "", placeholder: "Secondary Address" %>
     </div>
     <div class="form-group">
      <%# label_tag 'Destination City' %>
      <%= text_field_tag 'destination_address[city]', @destination_address ? @destination_address.city : "", placeholder: "City" %>
    </div>
    <div class="form-group">
      <%# label_tag 'Destination State' %>
      <%= text_field_tag 'destination_address[state]', @destination_address ? @destination_address.state : "", placeholder: "State" %>
    </div>
    <div class="form-group">
      <%# label_tag 'Destination Zip Code' %>
      <%= text_field_tag 'destination_address[zip_code]', @destination_address ? @destination_address.zip_code : "", placeholder: "Zip Code" %>
    </div>
  </div>
</div>
</div>
<div class="row setup-content" id="step-3">

  <div class="col-xs-12">
    <div class="col-md-12">
      <h3> Step 3: Parcel Info <%= submit_tag (@submit_btn), class: "btn btn-primary nextBtn btn-lg pull-right"%></h3>
      <div class="form-group">
       <%= hidden_field_tag 'parcel[sender_id]', current_user.id %>
       <%= hidden_field_tag 'parcel[delivered]', false %>
       <%# label_tag 'Parcel Description' %>
       <%= text_field_tag 'parcel[description]', @parcel ? @parcel.description : "", placeholder: "Parcel Description" %>
     </div>
     <div class="form-group">
      <%# label_tag 'Pickup By' %>
      <%= text_field_tag 'parcel[pickup_by]', @parcel ? @parcel.pickup_by : "", placeholder: "Pickup By" %>
    </div>
    <div class="form-group">
      <%# label_tag 'Delivery By' %>
      <%= text_field_tag 'parcel[deliver_by]', @parcel ? @parcel.deliver_by: "", placeholder: "Delivery By" %>
    </div>
    <div class="form-group">
      <%# label_tag 'Volume' %>
      <%= text_field_tag 'parcel[volume]', @parcel ? @parcel.volume : "", placeholder: "Volume" %>
    </div>
    <div class="form-group">
     <%# label_tag 'Weight' %>
     <%= text_field_tag 'parcel[weight]', @parcel ? @parcel.weight : "", placeholder: "Weight" %>
   </div>
   <div class="form-group">
    <%# label_tag 'Delivery Notes' %>
    <%= text_field_tag 'parcel[delivery_notes]', @parcel ? @parcel.delivery_notes : "", placeholder: "Delivery Notes" %>
  </div>
  <% end %>
</div>
</div>
</div>
</div>

