<%= render 'addresses/new_origin' %>

 <div class="row setup-content" id="step-2">
   <div class="col-xs-12">
     <div class="col-md-12">
       <h3> Step 2: Destination <button id="button-2" class="btn btn-default nextBtn btn-lg" type="button" >Next</button></h3>
       <%= render 'addresses/new_destination' %>
     </div>
  </div>
</div>
<div class="row setup-content" id="step-3">
  <div class="col-xs-12">
    <div class="col-md-12">
      <h3> Step 3: Parcel Info <%= submit_tag (@submit_btn), id: "button-3", class: "btn btn-default nextBtn btn-lg"%><h3>
      <div class="form-group">
       <%= hidden_field_tag 'parcel[delivered]', false %>
       <%= text_field_tag 'parcel[description]', @parcel ? @parcel.description : "", placeholder: "Parcel Description" %>
     </div>
     <div class="form-group">
       <div class='input-group date'>
          <%= text_field_tag 'parcel[pickup_by]', @parcel ? @parcel.pickup_by : "", :id => "datetimepicker1", placeholder: "Pickup by" %>
       </div>
    </div>
    <div class="form-group">
      <div class='input-group date'>
          <%= text_field_tag 'parcel[deliver_by]', @parcel ? @parcel.deliver_by : "", :id => 'datetimepicker2', placeholder: "Delivery by" %>
       </div>
    </div>
    <div class="form-group">
      <%= text_field_tag 'parcel[volume]', @parcel ? @parcel.volume : "", placeholder: "Volume" %>
    </div>
    <div class="form-group">
     <%= text_field_tag 'parcel[weight]', @parcel ? @parcel.weight : "", placeholder: "Weight" %>
    </div>
    <div class="form-group">
     <%= text_field_tag 'parcel[delivery_notes]', @parcel ? @parcel.delivery_notes : "", placeholder: "Delivery Notes" %>
   </div>
   <%= hidden_field_tag 'parcel[trip_id]', @parcel ? @parcel.trip_id : "" %>

<script>
$(function() {
  <% if @parcel %>
    <% if @parcel.pickup_by %>
      $('#datetimepicker1').data("DateTimePicker").date(new Date('<%= @parcel.pickup_by.strftime('%m/%d/%Y') %>'));
    <% end %>
    <% if @parcel.deliver_by %>
      $('#datetimepicker2').data("DateTimePicker").date(new Date('<%= @parcel.deliver_by.strftime('%m/%d/%Y') %>'));
    <% end %>
  <% end %>
});
</script>