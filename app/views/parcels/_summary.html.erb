<%= render partial: 'application/flash_messages' %>

<div class="row">
  <div class="col-md-2"><%= button_to 'details', parcel_path(parcel), method: :get, class: "btn btn-primary nextBtn btn-xs parcel_details" %></div>

  <div class="col-md-4"><%= parcel.description %></div>
  <div class="col-md-3"><%= parcel.destination_address.city %></div>
  <div class="col-md-3">
    <%= format_date(parcel.deliver_by) %>
  </div>
</div>
<% if !history %>
  <div class="row">
   <% if !parcel.trip %>
  <div class="col-md-2"><%= link_to 'match', trips_search_path(parcel_id: parcel.id), method: :get,class: "btn btn-info nextBtn btn-xs" %></div>
  <% else %>
   <div class="col-md-2">
      <%= button_to "Message Driver", compose_path, params: { sender: current_user.id, receiver: parcel.trip.driver.id, subject: "Parcel ##{parcel.id} on Trip ##{parcel.trip.id}" }, class: "btn btn-info nextBtn btn-xs" %>
    </div>
  <% end %>
     <div class="col-md-1"><%= button_to 'Edit', edit_parcel_path(parcel.id), class: "btn btn-alert nextBtn btn-xs", method: 'get' %></div>
    <div class="col-md-1"> <%= button_to 'Delete', parcel_path(parcel.id), class: "btn btn-alert nextBtn btn-xs", method: 'delete' %></div>
    </div>
  <% end %>
