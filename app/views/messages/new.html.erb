
<h3>Compose Message</h3>

<%= form_tag messages_path, :method => :post, class: "form-horizontal" do %>
    <%= hidden_field_tag "receiver", @receiver.id %>
    <%= hidden_field_tag "subject", @subject %>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">To:</label>
        <div class="col-sm-10"><%= @receiver.username %></div>
    </div>
    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Subject:</label>
        <div class="col-sm-10"><%= @subject %></div>
    </div>
    <div class="form-group">
        <label for="message" class="col-sm-2 control-label">Message:</label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="4" name="body"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input id="submit" name="submit" type="submit" value="Send" class="btn btn-primary">
        </div>
    </div>
<% end %>