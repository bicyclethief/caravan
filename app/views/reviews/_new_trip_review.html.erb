<%= form_for [@trip,@review] do |f| %>
  <%= f.label :rating%>:
  <%= f.text_field :rating %><br>

  <%= f.label :content %>:
  <%= f.text_area :content %><br>
  <%= f.hidden_field :trip_id, :value => @trip.id %>
  <%= f.hidden_field :reviewee_id, :value => @trip.driver_id %>
  <%= f.submit %>
<% end %>