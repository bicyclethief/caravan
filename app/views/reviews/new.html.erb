<h3>New Caravan Review</h3>
<%= form_for [@review_carrier,@review] do |f| %>
  <%= f.label :rating%>:
  <%= f.radio_button :rating, 1 %>
  <%= f.radio_button :rating, 2 %>
  <%= f.radio_button :rating, 3 %>
  <%= f.radio_button :rating, 4 %>
  <%= f.radio_button :rating, 5 %><br>
  <div class="col-sm-10">
    <%= f.text_area :content, placeholder: 'Review Content', class:"form-control", rows: 4 %><br>
  </div>
  <%= f.submit 'Create Review', class: 'btn btn-default nextBtn btn-sm' %>

<% end %>