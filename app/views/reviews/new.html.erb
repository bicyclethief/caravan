<%= form_for [@review_carrier,@review] do |f| %>
  <%= f.label :rating%>:
  <%= f.radio_button :rating, 1 %>
  <%= f.radio_button :rating, 2 %>
  <%= f.radio_button :rating, 3 %>
  <%= f.radio_button :rating, 4 %>
  <%= f.radio_button :rating, 5 %><br>

  <%= f.label :content %>:
  <%= f.text_area :content %><br>
  <% if @review_carrier.is_a? Parcel %>
    <%= f.hidden_field :reviewee_id, :value => @review_carrier.sender_id %>
  <% else %>
    <%= f.hidden_field :reviewee_id, :value => @review_carrier.driver_id %>
  <% end %>
  <%= f.submit %>
<% end %>