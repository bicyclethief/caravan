<h2><%= @user.username%>'s Profile</h2>
<h3>Driver</h3>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">Trip Destination City</div>
  <div class="col-md-3">Trip Destination Date</div>
</div>
<% @user.trips.each do |trip| %>
  <%= render partial: 'trip', locals: {trip: trip} %>
<% end %>
<h3>Sender</h3>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">Parcel Description</div>
  <div class="col-md-3">Parcel Destination City</div>
  <div class="col-md-3">Parcel Delivery Date</div>
</div>
<br>
<% @user.parcels.each do |parcel| %>
  <%= render partial: 'parcel', locals: {parcel: parcel} %>
<% end %>