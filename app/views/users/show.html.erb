<h2><%= @user.username%>'s Profile</h2>
<h3>Driver</h3>
<% if @user == current_user %>
  <%= render 'current_user_trips' %>
<% end %>
<h3>Sender</h3>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">Parcel Description</div>
  <div class="col-md-3">Parcel Destination City</div>
  <div class="col-md-3">Parcel Delivery Date</div>
</div>
<br>
<% @user.parcels.each do |parcel| %>
  <%= render partial: 'parcel', locals: {parcel: parcel} %>
<% end %>