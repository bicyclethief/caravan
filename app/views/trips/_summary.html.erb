<div class="row">

  <div class="col-md-3">
    <%= link_to trip.destination_address.city, trip_path(trip),method: :get, class: "btn btn-primary nextBtn btn-xs trip_details" %>
  </div>

  <div class="col-md-2">
    <% if trip.parcels.count > 0 %>
      <%= link_to trip.parcels.count, trip_parcels_path(trip) %>
      <% else %>
      <p>0</p>
    <% end %>
  </div>

    <% if !history %>

      <div class="col-md-1">
        <%= button_to "Edit", edit_trip_path(trip), class: "btn btn-info nextBtn btn-xs" %>
      </div>

      <div class="col-md-1">
        <%= button_to "Delete", trip_path(trip), class: "btn btn-info nextBtn btn-xs", method: :delete %>
      </div>
    <% end %>
    <div class="col-md-1"></div>
  
  <div class="col-md-2"><%= format_date(trip.leaving_at) %>
  </div>
  <div class="col-md-2"><%= format_date(trip.arriving_at) %>
  </div>
</div>
  
