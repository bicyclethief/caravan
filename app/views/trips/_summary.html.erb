<% trip.parcels.each do |parcel| %>
  <% @sum = 0 %>
  <% if parcel.delivered == false %>
    <% @sum += 1 %>
  <% end %>
  <% @sum %>
<% end %>

<div class="row">
  <% if @reviewer %>
    <div class="col-md-4">
      <%= link_to "Review", new_trip_review_path(trip) %>
    </div class="col-md-4">
  <% else %>
    <div class="col-md-1">
      <%= link_to "Details", trip_path(trip), method: :get %>
    </div>
    <div class="col-md-1">
      <%= link_to "Edit", edit_trip_path(trip) %>
    </div>
    <div class="col-md-1">
      <%= link_to "Delete", trip_path(trip), method: :delete %>
    </div>
    <div class="col-md-1">
      <% if parcels %>
        <%= render partial: '/trips/link_trip_parcels', locals: {parcels: parcels} %>
      <% end %>
    </div>
    <div class="col-md-2"><%= link_to (@sum), trip_parcels_path(trip) %></div>
  <% end %>
  <div class="col-md-3"><%= trip.destination_address.city %></div>
  <div class="col-md-3"><%= trip.arriving_at %></div>
</div>

